# todo list and program exit with match case

while True:
    user_action = input("Type add, show, edit, complete, or exit: ")
    user_action = user_action.strip()

    match (user_action):
        case 'add':
            todo = input("Enter a todo: ") + "\n"

            with open('files/todos.txt', 'r') as file:
                todos = file.readlines()
            todos.append(todo)

            with open('files/todos.txt', 'w') as file:
                todos = file.writelines(todos)

        case 'show':

            with open('files/todos.txt', 'r') as file:
                todos = file.readlines()

            for index, item in enumerate(todos):
                item = item.strip('\n')
                task = f"{index + 1}: {item}"
                print(task)
        case 'edit':
            number = (input("Which number todo item to edit?: "))
            index = int(number) - 1

            with open('files/todos.txt', 'r') as file:
                todos = file.readlines()

            new_todo = input("Enter new todo: ")
            todos[index] = new_todo + '\n'

            with open('files/todos.txt', 'w') as file:
                todos = file.writelines(todos)

        case 'complete':
            with open('files/todos.txt', 'r') as file:
                todos = file.readlines()

            number = int(input("Which number todo item to complete?: "))
            index = number - 1
            completed = todos[index].strip('\n')
            todos.pop(index)

            with open('files/todos.txt', 'w') as file:
                todos = file.writelines(todos)

            print(f"{completed} completed!")

        case 'exit':
            break
        case _:
            print("Please enter 'add', 'show', or 'exit'")

print("Bye")